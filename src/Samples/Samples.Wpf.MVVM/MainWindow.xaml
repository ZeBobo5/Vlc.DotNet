<Window x:Class="Samples.Wpf.MVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Samples.Wpf.MVVM"
        xmlns:wpf="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
        xmlns:behaviors="clr-namespace:Samples.Wpf.MVVM.Behaviors"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
      <wpf:VlcControl x:Name="VlcControl" behaviors:VlcMVVMHelperBehavior.Source="{Binding ImageOrVideoURL}" />
    </Grid>
</Window>
